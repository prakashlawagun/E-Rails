<div class="container">
  <h2 class="text-center mt-4">Product</h2>
  <div class="row products">
    <div class="col-md-8 mx-auto">
      <div class="card shadow mb-4">
        <% if @product.image.attached? %>
          <%= image_tag url_for(@product.image), class:"card-img-top",style: "max-width: 900px; max-height: 500px;" %>
        <% else %>
          <p>No image available</p>
        <% end %>
        <div class="card-body">
          <h3 class="card-title mb-3"><%= @product.name %></h3>
          <p class="card-text mb-4"><%= @product.description %></p>
          <p class="card-text h4">$<%= @product.price %></p>
          <div class="row justify-content-center mt-4">
            <div class="col-auto">
              <%= link_to "Edit", edit_product_url(id: @product.id), class: "btn btn-primary mr-2" %>
            </div>
            <div class="col-auto">
              <%= button_to "Delete", @product, method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
