<%= form_for @product, html: { class: "needs-validation", novalidate: true } do |f| %>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="mb-3">
          <h2> Edit Product</h2>
        </div>

        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a name.
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a description.
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :price, class: "form-label" %>
          <%= f.number_field :price, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a valid price.
          </div>
        </div>
        
        <div class="mb-3">
          <%= f.label :image, class: "form-label" %>
          <%= f.file_field :image, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a valid price.
          </div>
        </div>

        <%= f.submit "Edit Product", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
